{% macro tpl_settingsForm() %}
	<div class="form-ft">
		<div class="container">
				{% if error != '' %}
				<div class="col-12">
					<div class="login-error">
						<i class="fas fa-exclamation-circle"></i> {{ error }}
					</div>
				</div>
				{% endif %}

				{% if success != '' %}
				<div class="col-12">
					<div class="login-success">
						<i class="fas fa-exclamation-circle"></i> {{ success }}
					</div>
				</div>
				{% endif %}
			<form name="companysettings" action="admin/settings" method="POST">
				<input type="hidden" name="action" value="save">
				<input type="hidden" name="company_id" value="{{ hidden_input_array.company_id }}">
				<input type="hidden" name="nonce" value="{{ hidden_input_array.nonce }}">

				<div class="row">
					<div class="w-100 form-section-heading">Pack is included in ACV</div>
				</div>

				<div class="form-group row">

					<label for="acvoptionYes" class="col-6 col-md-3 col-xl-2 col-form-label-sm txt-right">Yes</label>
					<div class="col-6 col-md-3 col-xl-2">
						<div class="form-check">
							<input type="radio" class="form-check-input" name="acvoption" id="acvoptionYes" value="packinacv"{% if pack_section.setting == 0 %} checked{% endif %}>
						</div>
					</div>

					<label for="acvoptionNo" class="col-6 col-md-3 col-xl-2 col-form-label-sm txt-right">No</label>
					<div class="col-6 col-md-3 col-xl-2">
						<div class="form-check">
							<input type="radio" class="form-check-input" name="acvoption" id="acvoptionNo" value="packoutacv"{% if pack_section.setting == 1 %} checked{% endif %}>
						</div>
					</div>

				</div>

				<div class="row">
					<div class="w-100 form-section-heading">Default Deal Pack</div>
				</div>

				<div class="form-group row">

					<label for="defaultpack" class="col-6 col-md-3 col-xl-2 col-form-label-sm txt-right">Default Pack</label>
					<div class="col-6 col-md-3 col-xl-2">
						<input type="text" class="form-control form-control-sm" name="defaultpack" id="defaultpack" value="{{ pack_section.value }}">
					</div>

				</div>

				<div class="row">
					<div class="w-100 form-section-heading">Deal Doc Fee</div>
				</div>

				<div class="form-group row">

					<label for="trackdocTrackDocFees" class="col-6 col-md-3 col-xl-2 col-form-label-sm txt-right">Track Doc Fees</label>
					<div class="col-6 col-md-3 col-xl-2">
						<div class="form-check">
							<input type="radio" class="form-check-input" name="trackdoc" id="trackdocTrackDocFees" value="dotrack"{% if doc_fee_section.setting == 0 %} checked{% endif %}>
						</div>
					</div>

					<label for="trackdocDoNotTrack" class="col-6 col-md-3 col-xl-2 col-form-label-sm txt-right">Do Not Track</label>
					<div class="col-6 col-md-3 col-xl-2">
						<div class="form-check">
							<input type="radio" class="form-check-input" name="trackdoc" id="trackdocDoNotTrack" value="notrack"{% if doc_fee_section.setting == 1 %} checked{% endif %}>
						</div>
					</div>

				</div>

				<div class="form-group row">

					<label for="defaultdocfee" class="col-6 col-md-3 col-xl-2 col-form-label-sm txt-right">Default Doc Fee</label>
					<div class="col-6 col-md-3 col-xl-2">
						<input type="text" class="form-control form-control-sm" name="defaultdocfee" id="defaultdocfee" value="{{ doc_fee_section.value }}">
					</div>

				</div>

				<div class="row">
					<div class="w-100 form-section-heading">Show Flooring Section</div>
				</div>

				<div class="form-group row">

					<label for="flooringShowFlooring" class="col-6 col-md-3 col-xl-2 col-form-label-sm txt-right">Show Flooring</label>
					<div class="col-6 col-md-3 col-xl-2">
						<div class="form-check">
							<input type="radio" class="form-check-input" name="flooring" id="flooringShowFlooring" value="0"{% if flooring_section.setting == 0 %} checked{% endif %}>
						</div>
					</div>

					<label for="flooringHideFlooring" class="col-6 col-md-3 col-xl-2 col-form-label-sm txt-right">Hide Flooring</label>
					<div class="col-6 col-md-3 col-xl-2">
						<div class="form-check">
							<input type="radio" class="form-check-input" name="flooring" id="flooringHideFlooring" value="1"{% if flooring_section.setting == 1 %} checked{% endif %}>
						</div>
					</div>

				</div>

				<div class="row">
					<div class="w-100 form-section-heading">Track Deferred Down Payments</div>
				</div>

				<div class="form-group row">

					<label for="pickupsTrackPickups" class="col-6 col-md-3 col-xl-2 col-form-label-sm txt-right">Track Pickups</label>
					<div class="col-6 col-md-3 col-xl-2">
						<div class="form-check">
							<input type="radio" class="form-check-input" name="pickups" id="pickupsTrackPickups" value="0"{% if pickuppayments_section.setting == 0 %} checked{% endif %}>
						</div>
					</div>

					<label for="pickupsHidePickups" class="col-6 col-md-3 col-xl-2 col-form-label-sm txt-right">Hide Pickups</label>
					<div class="col-6 col-md-3 col-xl-2">
						<div class="form-check">
							<input type="radio" class="form-check-input" name="pickups" id="pickupsHidePickups" value="1"{% if pickuppayments_section.setting == 1 %} checked{% endif %}>
						</div>
					</div>

				</div>

				<div class="row">

					<div class="col-6 offset-6 col-md-3 offset-md-3 col-xl-2 offset-xl-2">
						<button type="submit" class="btn btn-primary btn-sm btn-block">Submit</button>
					</div>

				</div>
			</form>
		</div>
	</div>
{% endmacro %}