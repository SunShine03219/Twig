		function appendTable(data, type) {
			var content = "";
			for(var i=0; i < data.length; i++){
				content +=		`<tr class="deal-row" data-id="`+ data[i]['dealid'] + ` ">`+
					`<td>`+ data[i]['closed_dms'] + ` </td>`+
