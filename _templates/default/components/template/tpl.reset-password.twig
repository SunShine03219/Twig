{% extends 'tpl.container.twig' %}

{% block tpl_grid %}
	<div class="container-fluid login-container">
		<div id="login">
			<div class="row">
				<div class="login-logo">
					<span class="funding">FUNDING</span>
					<span class="tracker">TRACKER</span>
				</div>
			</div>
			<style>
				@media (max-width: 550px) {
					.funding, .tracker{
						font-size:35px !important;
					}
					.login-welcome{
						color: #ad273a;
						margin: 0 auto 40px;
						font-size: 20px;
						font-weight: 100;
					}
					#login {
						width:300px !important;
					}
					.login_input{
						width:140px !important;
					}
				}
			</style>
			<form name="reset_password" action="reset_password" method="POST">
				<input type="hidden" name="action" value="{{ action }}">
				<input type="hidden" name="id" value="{{ id }}">
				<input type="hidden" name="nonce" value="{{ hidden_input_array.nonce }}">
				{% if error is defined %}
					<div class="row">
						<div class="login-error">
							<i class="fas fa-exclamation-circle"></i> {{ error }}
						</div>
					</div>
				{% endif %}
				<div class="row">
					<div class="w-100 form-section-heading">Password Reset</div>
				</div>
				<div class="row" style="margin-top:20px">
					<div class="login-field">
						<div class="login-label">New Password</div>
						<input class="login_input" type="password" name="password" placeholder="Enter new password">
					</div>
				</div>
				<div class="row">
					<div class="login-field">
						<div class="login-label">Confirm</div>
						<input class="login_input" type="password" name="confirm_password" placeholder="Enter Confirm password">
					</div>
				</div>

				<div class="row">
					<input class="login-btn" type="submit" value="Reset Password">
				</div>
			</form>
		</div>
	</div>
{% endblock %}